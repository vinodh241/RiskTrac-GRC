{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch BCM in Chrome (nginx /bcm/)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5000/bcm/",
      "webRoot": "${workspaceFolder}",
      "runtimeExecutable": "C:\\Program Files\\Google\\Chrome\\Application\\chrome.exe",
      "runtimeArgs": [
        "--remote-debugging-port=9225",
        "--user-data-dir=${workspaceFolder}\\.vscode\\chrome-profile"
      ],
      "sourceMaps": true
    },
    {
      "name": "Attach to BCM Chrome (9225)",
      "type": "chrome",
      "request": "attach",
      "port": 9225,
      "webRoot": "${workspaceFolder}"
    }
  ]
}
